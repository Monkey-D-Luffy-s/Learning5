<script>
    toastr.options = {
        "closeButton": true,
        "progressBar": true,
        "positionClass": "toast-top-right",
        "timeOut": "3000"
    };
</script>

<script>
    $(function () {
        // Check if TempData has any messages
        var successMessage = '@TempData["SuccessMessage"]';
        var errorMessage = '@TempData["ErrorMessage"]';
        var infoMessage = '@TempData["InfoMessage"]';

        if (successMessage) {
            toastr.success(successMessage, "Success", { timeOut: 3000, progressBar: true });
        }
        if (errorMessage) {
            toastr.error(errorMessage, "Error", { timeOut: 3000, progressBar: true });
        }
        if (infoMessage) {
            toastr.info(infoMessage, "Info", { timeOut: 3000, progressBar: true });
        }
    });
</script>
