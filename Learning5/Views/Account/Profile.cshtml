@model Learning5.Models.Account.Profile


@{
    ViewData["Title"] = "Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .profile-card {
        max-width: 900px;
        margin: 32px auto;
        box-shadow: 0 6px 18px rgba(0,0,0,.08);
        border-radius: 12px;
        overflow: hidden;
    }

    .avatar {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        border: 6px solid #fff;
        box-shadow: 0 6px 14px rgba(0,0,0,.08);
    }

    .label {
        font-weight: 600;
        color: #333;
    }

    .value {
        color: #545454;
    }
   

    }
</style>

<div class="profile-card bg-white">
    <div class="row g-0">
        <div class="col-md-4 d-flex align-items-center justify-content-center bg-light p-4">
            <div class="text-center">
                <img src="@(string.IsNullOrEmpty(Model?.ProfilePhotoUrl) ? Url.Content("~/uploads/default-profile.png") : Model.ProfilePhotoUrl)" alt="Profile" class="avatar" />
                <h4 class="mt-3 mb-0">@Model?.FullName</h4>
                <small class="text-muted">@Model?.Email</small>
                <div class="mt-3">
                    <a href="@Url.Action("Edit", "Account")" class="btn btn-primary btn-sm me-2">Edit Profile</a>
                    <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-outline-secondary btn-sm">Change Password</a>
                </div>
            </div>
        </div>
        <div class="col-md-8 p-4">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <h5 class="mb-0">Personal Details</h5>
                <small class="text-muted">Member since: @User?.Identity?.IsAuthenticated == true ? "—" : "—"</small>
            </div>

            <div class="row mt-3">
                <div class="col-sm-6 mb-3">
                    <div class="label">Full Name</div>
                    <div class="value">@Model?.FullName ?? "-"</div>
                </div>

                <div class="col-sm-6 mb-3">
                    <div class="label">Email</div>
                    <div class="value">@Model?.Email ?? "-"</div>
                </div>

                <div class="col-sm-6 mb-3">
                    <div class="label">Mobile</div>
                    <div class="value">@Model?.Mobile ?? "-"</div>
                </div>

                <div class="col-sm-6 mb-3">
                    <div class="label">Aadhaar</div>
                    <div class="value">@Model?.Aadhaar ?? "-"</div>
                </div>

                <div class="col-sm-6 mb-3">
                    <div class="label">PAN</div>
                    <div class="value">@Model?.PAN ?? "-"</div>
                </div>

                <div class="col-sm-6 mb-3">
                    <div class="label">Profile Photo</div>
                    <div class="value">
                        @if (!string.IsNullOrEmpty(Model?.ProfilePhotoUrl))
                        {
                            <text><a href="@Model.ProfilePhotoUrl" target="_blank">View Image</a></text>
                            ;
                        }
                        else
                        {

                            <text>-</text>
                            ;
                        }
                    </div>
                </div>
            </div>

            <hr />
            <div class="mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-link"> Back to Dashboard </a>
            </div>
        </div>
    </div>
</div>