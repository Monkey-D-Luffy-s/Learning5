@model Learning5.Models.Account.TimeSheet

@{
    ViewData["Title"] = "Timesheet Entry";
}

<h2 class="mb-4 text-center">Timesheet Entry</h2>

<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" rel="stylesheet" />
<style>
    /* Calendar cell shadows */
    .fc-daygrid-day {
        border: 1px solid #ddd;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    }

    .modal-backdrop {
        background-color: rgb(0, 0, 0) !important; /* Solid black background */
        opacity: 1 !important; /* Remove transparency */
    }

    .fc-event.submitted {
        border: 1px solid #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
    }

    .fc-event.holiday {
        border: 1px solid #6c757d;
        box-shadow: 0 0 5px rgba(108, 117, 125, 0.5);
    }

    .sbar {
        background-color: #11f3f3 !important;
        height: 3px;
        box-shadow: 3px 0px 8px 3px #11f3f3;
    }
    /* Modal shadow */
    .modal-content {
        border:none;
        background-color: inherit;
        color: #38f8f8;
        border-radius:inherit;
    }

 

    .inputclg :focus-visible{
        background-color: inherit;
        color: #38f8f8;
        border:none;
        outline:none;
        border-bottom: 1px solid white;
    }

    /* Input shadow */
    #workingHours, #selectedDate {
        border: 1px solid #ced4da;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
    }

        #workingHours:focus, #selectedDate:focus {
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
            border-color: #007bff;
        }
</style>
<script src="~/lib/fullcalendar/index.global.min.js"></script>

<div id="calendar"></div>

<div class="modal fade" id="timesheetModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
                <p class="sbar"></p>
              
            <div class="modal-header">
                <h5 class="modal-title">Enter Working Hours</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="timesheetForm">
                    <input type="hidden" id="selectedDate" />
                    <div class="mb-3">
                        <label>Working Hours</label>
                        <input type="number" class="form-control inputclg" id="workingHours" min="1" max="12" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <p class="sbar"></p>
        </div>
    </div>
</div>

<script>
       document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var publicHolidays = ["2025-10-15", "2025-10-18"];
        var today = new Date().toISOString().split('T')[0];

        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            selectable: true,
            height: "auto",
            dateClick: function (info) {
                let clickedDate = info.dateStr;
                if (clickedDate > today) return;
                if (calendar.getEvents().some(e => e.startStr === clickedDate && e.title === 'Submitted')) return;
                if (publicHolidays.includes(clickedDate)) return;
                document.getElementById("selectedDate").value = clickedDate;
                var myModal = new bootstrap.Modal(document.getElementById('timesheetModal'));
                myModal.show();
            },
            events: publicHolidays.map(d => ({ title: 'Holiday', start: d, color: 'gray', display: 'background' }))
            
        });

        calendar.render();

        $.ajax({
            url: '@Url.Action("GetListofTimeshetFilled", "Account")',
            type: 'GET',
            data: '',
            processData: false,
            contentType: false,
            success: function (response) {
                if (Array.isArray(response)) {
                    response.forEach(date => {
                        calendar.addEvent({
                            title: 'Submitted',
                            start: date,
                            classNames: ['submitted'],
                            color: 'green',
                            display: 'background'
                        });
                    });
                } else {
                    console.error("Invalid response format for submittedDates:", response);
                }
            },
            error: function (xhr, status, error) {
                console.error("Error fetching timesheet data:", error);
            }
        });
        $.ajax({
            url: '@Url.Action("GetHolidays", "Account")',
            type: 'GET',
            data: { year: new Date().getFullYear() },
            success: function (response) {
                if (Array.isArray(response)) {
                    response.forEach(holiday => {
                        calendar.addEvent({
                            title: holiday.name,
                            start: holiday.date,
                            classNames: ['holiday'],
                            color: 'gray',
                            display: 'background'
                        });
                    });
                } else {
                    console.error("Invalid response format for holidays:", response);
                }
            },
            error: function (xhr, status, error) {
                console.error("Error fetching holidays:", error);
            }
        });
        document.getElementById("timesheetForm").addEventListener("submit", function (e) {
            e.preventDefault();
            var date = document.getElementById("selectedDate").value;
            var hours = document.getElementById("workingHours").value;
            var formdata = new FormData();
            formdata.append("date", date);
            formdata.append("hours", hours);

            $.ajax({
                url: '@Url.Action("AddTimeSheetEntry", "Account")',
                type: 'POST',
                data: formdata,
                processData: false,
                contentType: false,
                success: function (response) {
                    calendar.addEvent({
                        title: 'Submitted',
                        start: date,
                         classNames: ['submitted'],
                        color: 'green',
                        display: 'background'
                    });
                    var myModalEl = document.getElementById('timesheetModal');
                    var modal = bootstrap.Modal.getInstance(myModalEl);
                    modal.hide();
                },
                error: function (xhr, status, error) {
                    console.error("Error submitting timesheet:", error);
                }
            });
        });
    });
</script>
